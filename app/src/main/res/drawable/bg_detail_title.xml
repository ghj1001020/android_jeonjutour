<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 위 아래 테두리 -->
    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/border1" />
        </shape>
    </item>

    <item android:top="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/mint" />
        </shape>
    </item>

    <item android:top="1dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#f2f6fa" />
        </shape>
    </item>

</layer-list>