<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <item android:top="6dp" android:left="6dp" android:bottom="6dp" android:right="6dp">
                <shape >
                    <stroke android:color="@color/border1" android:width="1dp" />
                    <corners android:radius="4dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->
            <item android:top="6dp" android:left="6dp" android:bottom="6dp" android:right="6dp">
                <shape>
                    <stroke android:color="@color/border1" android:width="1dp" />
                    <corners android:radius="4dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/ic_check" android:top="10dp" android:right="10dp" android:bottom="10dp" android:left="10dp" />
        </layer-list>
    </item>

</selector>