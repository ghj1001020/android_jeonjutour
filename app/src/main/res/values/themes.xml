<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JeonJuTour" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>


    <!-- 텍스트 -->
    <style name="BaseText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TxtWeatherArea" parent="BaseText">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 버튼 -->
    <style name="BaseBtn">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BtnMenu" parent="BaseBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_menu</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
    
    <style name="BtnBoard" parent="BaseBtn">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/btn_board_sel</item>
        <item name="android:button">@null</item>
    </style>

</resources>