<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JeonJuTour" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
    </style>


    <!-- 텍스트 -->
    <style name="BaseText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BaseBoldText" parent="BaseText">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TxtNoData" parent="BaseBoldText">
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@color/mint</item>
    </style>

    <style name="TxtTitle" parent="BaseBoldText">
        <item name="android:textSize">21dp</item>
    </style>



    <!-- 버튼 -->
    <style name="BaseBtn">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BtnMenu" parent="BaseBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_menu</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">60dp</item>
    </style>
    
    <style name="BtnBoard" parent="BaseBtn">
        <item name="android:background">@drawable/btn_board_sel</item>
        <item name="android:button">@null</item>
    </style>

    <style name="BtnSelect" parent="BaseBtn">
        <item name="android:background">@drawable/bg_select</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!-- 이미지버튼 -->
    <style name="BaseImageBtn">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
        <item name="android:padding">12dp</item>
    </style>
    
    
    <!-- 입력상자 -->
    <style name="BaseEdit">
        <item name="colorControlActivated">@color/border2</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_edit</item>
    </style>

    <style name="EditSearch" parent="BaseEdit">
        <item name="android:maxLength">30</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">4dp</item>
    </style>

</resources>